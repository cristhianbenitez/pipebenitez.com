---
layout: layouts/base.njk
section: contact
permalink: "/contact/index.html"
---
<article class="pb--4">
  <header class="pb--4">
    <div class="grid grid--intro">
      <h1 class="grid__item--span-4 mw--readable">Get in Touch</h1>
      <div class="grid__item--span-4 mw--readable markdown">
        {{ settings.metadata.contact_description | renderUsingMarkdown | safe }}
      </div>
    </div>
  </header>

  <section class="grid grid--intro">
    <form class="form grid__item--span-4 mw--readable" action="https://api.web3forms.com/submit" method="POST">
      <input type="hidden" name="access_key" value="{{ metadata.web3forms_key }}">
      <input type="hidden" name="subject" value="Photoshoot Inquiry">
      <input type="checkbox" name="botcheck" class="hidden" style="display: none;">

      <div class="form__group">
        <label class="form__label" for="name">Name</label>
        <input class="form__input" type="text" id="name" name="name" required>
      </div>

      <div class="form__group">
        <label class="form__label" for="email">Email</label>
        <input class="form__input" type="email" id="email" name="email" required>
      </div>

      <div class="form__group">
        <label class="form__label" for="type">Type</label>
        <select class="form__input" id="type" name="type" required>
          <option value="">Please select...</option>
          <option value="Portrait">Portrait</option>
          <option value="Event">Event</option>
          <option value="Commercial">Commercial</option>
          <option value="Engagement">Engagement</option>
          <option value="Proposal">Proposal</option>
          <option value="Other">Other</option>
        </select>
      </div>

      <div class="form__group">
        <label class="form__label" for="message">Message</label>
        <textarea class="form__textarea" id="message" name="message" rows="6" required></textarea>
      </div>

      <button class="btn btn--primary" type="submit">Send Message</button>
    </form>
  </section>
</article>

